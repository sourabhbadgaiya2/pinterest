<%- include("./partials/header") %> <%- include("./partials/navbar") %>

<div class="bg-gray-100">
  <div class="bg-white mx-auto p-2 rounded shadow-md w-full max-w-sm">
    <h2 class="text-2xl font-bold text-center mb-4">Home</h2>
  </div>
  <%= posts.images %>
  <div
    class="border border-gray-300 mx-auto flex gap-4 flex-wrap mt-4 p-4 rounded shadow-md w-full min-h-screen"
  >
    <% posts.forEach(element => { %>
    <div class="">
      <img class="h-40" src="/images/<%= element.image  %>" alt="" />
      <p>Title:<%= element.title %></p>
      <p>Description :<%= element.description %></p>
      <p>posted by: <%= element.user.name %></p>
    </div>
    <% }); %>
  </div>
</div>

<%- include("./partials/footer") %>
